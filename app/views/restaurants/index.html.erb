<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Adress</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.adress %></td>
        <td><%= restaurant.telephone %></td>
        <td><%= link_to 'Show', restaurant ,:class => 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant),:class => 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', restaurant, :class => 'btn btn-info',method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path,:class => 'btn btn-danger' %>
